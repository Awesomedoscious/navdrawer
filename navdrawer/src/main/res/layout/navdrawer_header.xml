<com.oprisnik.navdrawer.widget.NavDrawerHeader
    android:id="@+id/navdrawer_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navdrawer_header_height"
    android:background="?colorPrimary"
    android:foreground="?selectableItemBackgroundBorderless"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <google.samples.apps.iosched.ui.widget.BezelImageView
        android:id="@android:id/icon"
        android:layout_width="@dimen/navdrawer_header_icon_size"
        android:layout_marginTop="@dimen/navdrawer_header_icon_margin_top"
        android:layout_marginLeft="@dimen/navdrawer_item_padding_lr"
        android:layout_marginStart="@dimen/navdrawer_item_padding_lr"
        android:layout_height="@dimen/navdrawer_header_icon_size"
        android:layout_gravity="top|start"
        android:src="@drawable/person_image_empty"
        android:scaleType="centerCrop"
        app:maskDrawable="@drawable/circle_mask"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navdrawer_item_height"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/navdrawer_margin_tb"
        android:paddingLeft="@dimen/navdrawer_item_padding_lr"
        android:paddingRight="@dimen/navdrawer_item_padding_lr">

        <TextView
            android:id="@android:id/text1"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/abc_primary_text_material_dark"
            tools:text="Jonathan Lee"/>

        <TextView
            android:id="@android:id/text2"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/abc_primary_text_material_dark"
            tools:text="heyfromjonathan@gmail.com"/>
    </LinearLayout>

</com.oprisnik.navdrawer.widget.NavDrawerHeader>